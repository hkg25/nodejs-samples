<h1> Task Manager </h1>
<hr>

<a href="/tasks/new">Create New</a>
<p> {{taskList.length}} tasks will be displayed here </p>

<ol>
{{#each taskList}}
<li>
  {{#if this.isCompleted}}
    <span class="completed">{{this.name}}</span>
  {{else}}
    <span>{{this.name}}</span>
  {{/if}}
    <a href= "/tasks/toggle/{{this.id}}">X</a>
    <a href= "/tasks/remove/{{this.id}}">Remove</a>
  </li>
{{/each}}
</ol>
